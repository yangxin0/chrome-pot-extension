{
  "manifest_version": 3,
  "name": "Text Selection Translator",
  "version": "1.0",
  "description": "Sends selected text to local translation service",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["popup.png", "icon.png"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "http://127.0.0.1:*/*"
  ]
}
